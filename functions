#!/usr/bin/env bash
# functions - Common functions used by MidoStack components
function is_devstack_cloned() {
    MIDO_DIR=$(pwd)
    DEVSTACK_DIR="$MIDO_DIR/devstack"
    if [ ! "$(ls -A $DEVSTACK_DIR)" ]; then
        git submodule update --init
    fi
}

is_devstack_cloned

source devstack/functions
